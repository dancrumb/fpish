{
  "name": "@ahanapediatrics/ahana-fp",
  "version": "3.5.0",
  "description": "FP-friendly classes for Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.17.0"
  },
  "private": false,
  "scripts": {
    "build": "tsc",
    "release": "standard-version",
    "prerelease": "npm run prepare",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:ci": "eslint -c .eslintrc.js --ext .ts --format junit --output-file ./reports/eslint.xml src",
    "postversion": "git push && git push --tags",
    "prettier:cli": "prettier \"src/**/*.ts\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "test": "nyc mocha test/*.spec.ts"
  },
  "keywords": [
    "FP",
    "Typescript"
  ],
  "author": "Dan Rumney <dan.rumney@ahanapediatrics.com>",
  "license": "MIT",
  "repository": "github:ahanapediatrics/ahana-fp",
  "devDependencies": {
    "@types/chai": "4.3.0",
    "@types/chai-as-promised": "7.1.5",
    "@types/mocha": "9.1.0",
    "@types/sinon": "10.0.11",
    "@types/sinon-chai": "3.2.8",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "git-cz": "4.8.0",
    "mocha": "9.2.2",
    "mocha-junit-reporter": "2.0.2",
    "nyc": "15.1.0",
    "prettier": "2.6.2",
    "sinon": "13.0.1",
    "sinon-chai": "3.7.0",
    "ts-node": "10.7.0",
    "tslint": "6.1.3",
    "typescript": "4.6.3"
  },
  "files": [
    "dist/**/*"
  ],
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "standard-version": "9.3.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "reporter": "mocha-junit-reporter",
    "reporter-options": "mochaFile=./reports/npm-test.xml",
    "extension": [
      "ts"
    ]
  }
}
