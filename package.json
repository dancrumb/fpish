{
  "name": "@ahanapediatrics/ahana-fp",
  "version": "3.0.3",
  "description": "FP-friendly classes for Typescript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "private": false,
  "scripts": {
    "build": "tsc",
    "release": "standard-version",
    "prerelease": "npm run prepare",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:ci": "eslint -c .eslintrc.js --ext .ts --format junit --output-file ./reports/eslint.xml src",
    "postversion": "git push && git push --tags",
    "prettier:cli": "prettier \"src/**/*.ts\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "test": "nyc mocha test/*.spec.ts"
  },
  "keywords": [
    "FP",
    "Typescript"
  ],
  "author": "Dan Rumney <dan.rumney@ahanapediatrics.com>",
  "license": "MIT",
  "repository": "github:ohana-pediatrics/ahana-fp",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.0",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-cz": "^4.7.1",
    "mocha": "^9.0.0",
    "mocha-junit-reporter": "^2.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "sinon": "^11.0.0",
    "sinon-chai": "^3.4.0",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "files": [
    "lib/**/*"
  ],
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "standard-version": "^9.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "reporter": "mocha-junit-reporter",
    "reporter-options": "mochaFile=./reports/npm-test.xml",
    "extension": [
      "ts"
    ]
  }
}
