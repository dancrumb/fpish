{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ES2022"
  },
  "include": [
    "eslint.config.js",
    "*.d.ts",
    "src/**/*",
    "**/*.spec.ts",
    "vitest.config.ts"
  ],
  "exclude": ["dist", "coverage", "docs"]
}
